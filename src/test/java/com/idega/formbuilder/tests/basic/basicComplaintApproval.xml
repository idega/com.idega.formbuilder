<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns="urn:jbpm.org:jpdl-3.1"  name="basicComplaintApproval">
   <swimlane name="initiator"></swimlane>
   <start-state name="start">
      <transition name="" to="Initiate complaint"></transition>
   </start-state>
   <end-state name="end"></end-state>
   <task-node name="Initiate complaint">
      <task name="Write complaint">
         <controller>
            <variable name="string:initiator name" access="read,write,required"></variable>
            <variable name="string:complaint description" access="read,write,required"></variable>
         </controller>
      </task>
      <transition name="" to="Decide"></transition>
   </task-node>
   <task-node name="Decide">
      <task name="Approve">
         <controller>
            <variable name="string:approve comment"></variable>
            <variable name="string:initiator name" access="read"></variable>
         </controller>
      </task>
      <transition name="" to="end"></transition>
   </task-node>
</process-definition>